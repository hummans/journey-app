<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ng.startup.journeyapp.fragments.goals.GoalStepsIndividual">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/stepDateCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/lato_regular"
            android:text="TextView"
            android:textColor="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/stepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stepDateCreated"
            android:layout_marginTop="14dp"
            android:background="@color/white"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/lato_regular"
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textSize="24sp"
            tools:ignore="Deprecated" />

        <EditText
            android:id="@+id/stepJournal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stepTitle"
            android:background="@color/white"
            android:ems="10"
            android:hint="Write a Journal about the step Taken"
            android:inputType="textMultiLine"
            android:padding="7dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/saveStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_curved_edges_white"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Save" />
    </RelativeLayout>
</RelativeLayout>