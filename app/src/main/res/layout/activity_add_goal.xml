<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:padding="10dp"
    app:titleTextAppearance="@style/TitleBarTextAppearance"
    tools:context="ng.startup.journeyapp.fragments.goals.AddGoal">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/infini_gras"
        android:text="Add Goal"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="What do you want to do?"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextTitle"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="Description"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextDescription"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="What's the timeline?"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/editTextDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="10dp"
                android:background="@drawable/light_background_curved_edges"
                android:clickable="true"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:padding="5dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextDueDate"
                android:layout_marginTop="10dp"
                android:text="Choose a color"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/myRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="10dp"
                android:checkedButton="@+id/red"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_red"
                    android:buttonTint="@color/cardview_shadow_start_color"
                    android:focusable="auto" />

                <RadioButton
                    android:id="@+id/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_green"
                    android:buttonTint="@color/cardview_shadow_start_color"
                    android:focusable="auto" />

                <RadioButton
                    android:id="@+id/yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_yellow"
                    android:buttonTint="@color/cardview_shadow_start_color"
                    android:focusable="auto" />

                <RadioButton
                    android:id="@+id/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_grey"
                    android:buttonTint="@color/cardview_shadow_start_color"
                    android:focusable="auto" />

                <RadioButton
                    android:id="@+id/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_blue"
                    android:buttonTint="@color/cardview_shadow_start_color"
                    android:focusable="auto" />

                <RadioButton
                    android:id="@+id/purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_purple"
                    android:buttonTint="@color/cardview_shadow_start_color"
                    android:focusable="auto" />

            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myRadioGroup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <Button
                    android:id="@+id/cancelGoalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_background_curved_edges"
                    android:fontFamily="@font/lato_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/addGoalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/cancelGoalButton"
                    android:layout_toRightOf="@+id/cancelGoalButton"
                    android:background="@drawable/dark_background_curved_edges"
                    android:fontFamily="@font/lato_regular"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Add Goal"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
